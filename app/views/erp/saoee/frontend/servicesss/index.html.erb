<% title t('service') %>

<!-- PAGE HEADING-->
<section class="section breadcrumb p-t-65 p-b-35">
    <div class="container">
        <div class="page-heading">
            <h2 class="title-2"><%= t('.service') %></h2>
            <h4 class="title-sub title-sub--c8 m-b-15">
                <%= link_to t('home'), erp_saoee.root_path %> <i class="ti-angle-double-right"></i>
                <%= t('service') %>
            </h4>
        </div>
    </div>
</section>
<!-- END PAGE HEADING-->

<!-- SERVICE-->
<section class="p-t-60 p-b-55">
    <div class="container">
        <div class="section-title">
            <h5 class="title-sub"><%= t('.our_services_title_sub') %></h5>
            <h2 class="title-1"><%= t('.our_services_title') %></h2>
        </div>
        <div class="row no-gutters">
            <% @service_menus.each_with_index do |service,index| %>
                <div class="col-md-6 col-lg-4">
                    <article class="media media-service">
                        <figure class="media__img">
                            <!--image_tag article_image(service.image.thumb_116_99, '116_99'), alt: service.name %>-->
                        </figure>
                        <%
                            display_service_name = ''
                            display_service_desc = ''
                            if I18n.locale == :vi
                                display_service_name = service.name
                                display_service_desc = service.description
                            elsif I18n.locale == :en
                                display_service_name = service.en_name
                                display_service_desc = service.en_description
                            elsif I18n.locale == :ja
                                display_service_name = service.ja_name
                                display_service_desc = service.ja_description
                            end
                        %>
                        <div class="media__title">
                            <h3 class="title">
                                <%= link_to display_service_name, service_link(service) %>
                            </h3>
                            <span class="number"><%= format('%02d', index + 1) %></span>
                        </div>
                        <p class="media__text"><%= display_service_desc %></p>
                    </article>
                </div>
            <% end %>
        </div>
    </div>
</section>
<!-- END SERVICE-->