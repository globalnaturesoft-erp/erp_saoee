<% content_for :page_style do %>
    <link rel="stylesheet" href="/frontend/css/project.css" />
<% end %>

<% title t('project') %>

<!-- PAGE HEADING-->
<section class="section breadcrumb p-t-65 p-b-35">
    <div class="container">
        <div class="page-heading">
            <h2 class="title-2"><%= t('.project') %></h2>
            <h4 class="title-sub title-sub--c8 m-b-15">
                <%= link_to t('home'), erp_saoee.root_path %> <i class="ti-angle-double-right"></i>
                <%= t('project') %>
            </h4>
        </div>
    </div>
</section>
<!-- END PAGE HEADING-->

<!-- PROJECT-->
<section class="p-t-60 p-b-55">
    <div class="container">
        <div class="section-title">
            <h5 class="title-sub"><%= t('.our_work') %></h5>
            <h2 class="title-1"><%= t('.our_projects') %></h2>
        </div>
        <div class="row gutter-xl">
            <% @projects.each do |project| %>
                <%
                    project_name = project.name
                    if project.name.present? and project.en_name.present?
                        if I18n.locale == :vi
                            project_name = project.name
                        elsif I18n.locale == :en
                            project_name = project.en_name
                        elsif I18n.locale == :ja
                            project_name = project.ja_name
                        end
                    end
                %>
                <%
                    project_location = project.location
                    if project.location.present? and project.en_location.present?
                        if I18n.locale == :vi
                            project_location = project.location
                        elsif I18n.locale == :en
                            project_location = project.en_location
                        elsif I18n.locale == :ja
                            project_location = project.ja_location
                        end
                    end
                %>
                <div class="col-md-4">
                    <article class="media media-project m-b-50">
                        <figure class="media__img">
                            <%= image_tag project.image.thumb_960_600, alt: project_name %> <!-- image_natural_size: 960x600px -->
                        </figure>
                        <div class="bg-overlay"></div>
                        <span class="line"></span>
                        <span class="line line--bottom"></span>
                        <div class="media__body">
                            <h3 class="title">
                                <%= link_to project_name, project_link(project) %>
                            </h3>
                            <div class="address"><%= project_location %></div>
                        </div>
                    </article>
                </div>
            <% end %>
        </div>
        <% if false %>
            <div class="text-center p-t-10">
                <a class="au-btn au-btn--c6 au-btn-lg" href="#">Bấm để xem thêm danh sách</a>
            </div>
        <% end %>
    </div>
</section>
<!-- END PROJECT-->